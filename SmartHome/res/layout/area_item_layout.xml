<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/areaItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/areaItemImageDes"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" >
	    <TextView
	        android:id="@+id/areaItemName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textSize="@dimen/area_item_word_size" />

	    <TextView
	        android:id="@+id/areaItemIndex"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#473C8B"
	        android:textSize="@dimen/area_item_word_size" />

    </LinearLayout>


    <TextView
        android:id="@+id/areaItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1874CD" />

</LinearLayout>
